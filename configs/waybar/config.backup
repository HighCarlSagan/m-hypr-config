{
    "layer": "top",
    "position": "top",
    "height": 50,
    "spacing": 4,
    "exclusive": true,
    "output": ["DP-3", "HDMI-A-1"],

    "modules-left": ["hyprland/workspaces", "hyprland/window"],
    "modules-center": ["clock"],
    "modules-right": ["custom/spotify", "tray", "cpu", "memory", "temperature", "custom/gpu", "pulseaudio", "network", "custom/power"],
    
    "hyprland/workspaces": {
        "disable-scroll": false,
        "all-outputs": true,
        "swap-scroll-direction": false,
        "format": "{icon}",
        "format-icons": {
            "1": "一",
            "2": "二",
            "3": "三",
            "4": "四",
            "5": "五",
            "6": "六",
            "7": "七",
            "8": "八",
            "9": "九",
            "11": "一",
            "12": "二",
            "13": "三",
            "14": "四",
            "15": "五",
            "16": "六",
            "17": "七",
            "18": "八",
            "19": "九",
            "urgent": "",
            "focused": "",
            "default": ""
        },
        "persistent-workspaces": {
            "DP-3": [1, 2, 3, 4, 5, 6, 7, 8, 9],
            "HDMI-A-1": [11, 12, 13, 14, 15, 16, 17, 18, 19]
        }
    },
    
    "hyprland/window": {
        "format": "{}",
        "max-length": 50,
        "separate-outputs": true
    },
    
    "clock": {
        "timezone": "Asia/Kolkata",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": " {:%H:%M   %d/%m/%Y}",
        "format-alt": " {:%A, %B %d, %Y}",
   	"on-click": "~/.config/waybar/scripts/calendar.sh"
    },
    "cpu": {
        "format": " {usage}%",
        "tooltip": true,
        "interval": 2
    },
    
    "memory": {
        "format": " {}%",
        "tooltip-format": "RAM: {used:0.1f}G / {total:0.1f}G\nSwap: {swapUsed:0.1f}G / {swapTotal:0.1f}G"
    },
    
    "temperature": {
        "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
        "critical-threshold": 80,
        "format-critical": " {temperatureC}°C",
        "format": " {temperatureC}°C",
        "interval": 2
    },
    
    "custom/gpu": {
        "exec": "~/.config/waybar/scripts/gpu-usage.sh",
        "return-type": "json",
        "interval": 2,
        "format": "{}"
    },
    
    "network": {
        "format-wifi": " {essid} ({signalStrength}%)",
        "format-ethernet": " {ipaddr}/{cidr}",
        "tooltip-format": "{ifname} via {gwaddr}",
        "format-linked": " {ifname} (No IP)",
        "format-disconnected": "⚠ Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": " Muted",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    },
    
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "custom/power": {
        "format": "⏻",
        "tooltip": false,
        "on-click": "~/.config/rofi/powermenu.sh"
    },
    "custom/spotify": {
        "format": "{}",
        "max-length": 50,
        "interval": 1,
        "exec": "~/.config/waybar/scripts/music.sh",
        "on-click": "~/.config/waybar/scripts/music-popup.sh",
        "on-scroll-up": "playerctl -p spotify next",
        "on-scroll-down": "playerctl -p spotify previous",
        "escape": true
    }
}
